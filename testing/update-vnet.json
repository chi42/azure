{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "names": {
      "type": "object"
    },
    "resourceAPIVersions": {
      "type": "object"
    },
    "addressPrefix": {
      "type": "string"
    },
    "dnsIp": {
      "type": "string"
    },
    "typeHandlerVersion": {
      "type": "string"
    },
    "scriptsUri": {
      "type": "string"
    }
  },
  "variables" : {
    "singleQuote": "'"
  },
  "resources": [
    {
      "apiVersion": "[parameters('resourceAPIVersions').virtualNetworks]",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[parameters('names').virtualNetwork]",
      "location": "[resourceGroup().location]",
      "properties": {
        "dhcpOptions": {
          "dnsServers": [
            "[parameters('dnsIp')]"
          ]
        },
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('addressPrefix')]"
          ]
        },
        "subnets": [
          {
            "name": "[parameters('names').virtualNetworkSubnet]",
            "properties": {
              "addressPrefix": "[parameters('addressPrefix')]"
            }
          }
        ]
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(variables('names').dnsVm, '/initVmScripts')]",
      "apiVersion": "[variables('resourceAPIVersions').virtualMachinesExtensions]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "['Microsoft.Resources/deployments/update-vnet']"
      ],
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "[parameters('typeHandlerVersion')]",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": [
            "[concat(parameters('scriptsUri'), '/scripts/initialize-dns-server.sh')]"
          ]
        },
        "protectedSettings":{
          "commandToExecute": "[concat('sh initialize-dns-server.sh ', ' ', variables('singleQuote'), parameters('dnsNameSuffix'), variables('singleQuote'), ' ', variables('singleQuote'), parameters('dnsVmIpAddress'), variables('singleQuote'))]"
        }
      }
    }
  ]
}
